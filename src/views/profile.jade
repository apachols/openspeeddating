extends layout

block content
  .row: .col-xs-12
    .panel.panel-default(ng-controller="ProfileController")
      .panel-heading <b>{{doc.email}}</b>
      .panel-body
        form.js-form.form-horizontal(name="profile" role='form' autosave model='doc.profile')

          fieldset
            legend Profile
            .form-group.has-feedback
              label.col-sm-2.col-sm-offset-1.control-label Name
              .col-sm-8
                input.form-control(type='text' name='name' ng-model="doc.profile.name")

            .form-group
              label.col-sm-2.col-sm-offset-1.control-label Nickname
              .col-sm-8
                input.form-control(type='text' name='nickname' ng-model="doc.profile.nickname")

            .form-group
              label.col-sm-2.col-sm-offset-1.control-label Age
              .col-sm-8: .row
                .col-sm-3.has-feedback
                  input.form-control(type='text' disabled ng-model="doc.profile.age.my")
                  .fa.fa-check.form-control-feedback

                .col-sm-9
                  .form-control-static.has-feedback
                    div(range-slider ng-if="doc.profile" min="18" max="100" model-max="doc.profile.age.my" pin-handle="min" show-values="false")


            .form-group
              label.col-sm-2.col-sm-offset-1.control-label Gender
              .col-sm-8
                ul.list-unstyled(ng-repeat="gender in genders track by $index")
                  li.checkbox: label
                    input(type='checkbox' ng-true-value="{{gender.code}}" ng-model="doc.profile.gender.my")
                    | {{gender.label}}

          fieldset
            legend Seeking
            .form-group
              label.col-sm-2.col-sm-offset-1.control-label Genders
              .col-sm-8
                ul.list-unstyled(ng-repeat="gender in genders track by $index")
                  li.checkbox: label
                    input(type='checkbox' checklist-value="gender.code" checklist-model="doc.profile.gender.seeking")
                    | {{gender.label}}

            .form-group
              label.col-sm-2.col-sm-offset-1.control-label Ages
              .col-sm-8: .row
                .col-sm-3.has-feedback
                  div: {{doc.profile.age.seeking[0]}} to {{doc.profile.age.seeking[1]}}

                .col-sm-9
                  .form-control-static.has-feedback
                      div(range-slider ng-if="doc.profile" min="18" max="100" model-min="doc.profile.age.seeking[0]" model-max="doc.profile.age.seeking[1]")


          fieldset
            legend Match Questions
            .form-group
              .col-sm-8: .row
                .col-sm-4.col-sm-offset-4
                  button.btn-primary(ng-click="swapEditState()") {{editLabel()}}
                .col-sm-4
                  button.btn-primary(ng-click="saveAnswer()") Skip This Question

              .row#my-answer
                label.col-sm-4.col-sm-offset-1.control-label {{currentQuestion.text}}
                //- h3 My Answer
                //- p My answer is: {{currentAnswer.answer}}
                .col-sm-7
                  ul.list-unstyled(ng-repeat="answer in currentQuestion.answers track by $index")
                    li.checkbox: label
                      input(type='radio' ng-value="answer" ng-model="currentAnswer.answer")
                      | {{answer}}

              .row#acceptable-answers(ng-show="currentAnswer.answer")
                label.col-sm-4.col-sm-offset-1.control-label Answers I'll Accept
                //- My answers are: {{currentAnswer.acceptable}}
                .col-sm-7
                  ul.list-unstyled(ng-repeat="answer in currentQuestion.answers track by $index")
                    li.checkbox: label
                      input(type='checkbox' ng-true-value="{{answer}}" ng-model="currentAnswer.acceptable[$index]")
                      | {{answer}}
              .row#importance(ng-show="currentAnswer.acceptable.length > 0")
                label.col-sm-4.col-sm-offset-1.control-label How important is this question to me?
                //- p {{currentAnswer.importance}}
                .col-sm-7
                  ul.list-unstyled
                    li
                      input(type='radio' ng-model="currentAnswer.importance" value="2")
                      | Very important
                    li
                      input(type='radio' ng-model="currentAnswer.importance" value="1")
                      | Somewhat important
                    li
                      input(type='radio' ng-model="currentAnswer.importance" value="0")
                      | Not at all important

              .row#next(ng-show="currentAnswer.answer")
                .col-sm-4.col-sm-offset-4.control-label
                  button.btn-primary(ng-click="saveAnswer()") Next Question


             
              .row#debug
                .col-sm-12
                  h3 DEBUG: here are all the answers.
                  p {{doc.profile.answers}}
              

