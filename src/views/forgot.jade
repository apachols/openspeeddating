extends layout

block content
  .col-xs-12.col-sm-6.col-sm-offset-3
    .well

      if error
        .alert.alert-error
          p #{error}

      h1 Reset Your Password
      form(action="/reset" method="post")
        .form-group
          label(for="form-email") E-Mail Address
          input#form-email.form-control(type="email" name="email" placeholder="someone@example.com" value=email)

        .form-group
          label(for="form-token") Reset Token
          input#form-token.form-control(type="text" name="token" placeholder="c9c582b433ce5aace8295f82d1dbc23f9d4a54a2" value=token)

        .form-group
          label(for="form-password") New Password
          input#form-password.form-control(type="password" name="password" placeholder="password")

        .form-group
          label(for="form-confirm") Confirm Password
          input#form-confirm.form-control(type="password" name="confirm" placeholder="confirm password")
