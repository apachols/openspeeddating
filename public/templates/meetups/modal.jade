.modal-header
  button(type="button" class="close" ng-click="cancel()" aria-hidden="true").
    &times;
  h3.modal-title Create a new Meetup

.modal-body
  .form-group
    label Meetup Name
    input.form-control(type="text" ng-model="meetup.name"
      placeholder="Meetup Name")

  .form-group
    label Location
    input.form-control(type="text" ng-model="meetup.location"
      placeholder="742 Evergreen Terrace")

  .form-group
    label Description
    textarea.form-control(rows="5" ng-model="meetup.description")

  .form-group
    .row
      .col-xs-12
        label Number of People
    .row
      .col-sm-2
        input.form-control(type="text" ng-model="meetup.cap")

      .col-sm-10
        .form-control(range-slider min="0" max="100" model-max="meetup.cap" pin-handle="min" show-values="false")

  .row
    .col-sm-6
      .form-group
        label Date
        datepicker.datepicker-block(ng-model="meetup.date" show-weeks="false" min-date="minDate")

    .col-sm-6
      .form-group
        label Time
        timepicker(ng-model="meetup.date" hour-step="1" minute-step="15")

  .row
    .col-sm-6
      .form-group
        label Registration Open
        datepicker.datepicker-block(ng-model="meetup.registration.open" show-weeks="false" min-date="minDate")
    .col-sm-6
      .form-group
        label Registration Close
        datepicker.datepicker-block(ng-model="meetup.registration.close" show-weeks="false" min-date="minDate")


.modal-footer
  .pull-right
    ul.list-inline
      li: a.btn.btn-danger(ng-click="cancel()") Cancel
      li: a.btn.btn-success(ng-click="save()") Save
