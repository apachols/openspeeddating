base(href="/admin/")
.col-sm-10
  .panel.panel-default
    .panel-heading
      a.pull-right(ng-click="add()") Add
      h1 {{tableheader}}
    .panel-body
      table.table.table-striped
        thead
          tr
            th(ng-repeat="field in fields") {{field}}
            th edit
            th remove
        tbody
          tr(ng-repeat="doc in docs")
            td(ng-repeat="field in fields") {{doc[field]}}
            td: a(ng-href="#/{{selected}}/{{doc._id}}") edit
            td: a(ng-click="remove($index, doc._id)") remove